<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="36dp"
        android:text="荷物受け取りアプリ トップ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/image_button_touroku"
        android:layout_width="343dp"
        android:layout_height="343dp"
        android:layout_margin="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/touroku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/image_button_uketori"
        android:layout_width="343dp"
        android:layout_height="343dp"
        android:layout_margin="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="384dp"
        android:background="@drawable/uketori"
        app:layout_constraintStart_toEndOf="@+id/image_button_touroku"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/jimuto_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="314dp"
        android:text="jimutou_change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_button_touroku" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="317dp"
        android:text="ただいまの事務当番は、"
        app:layout_constraintStart_toEndOf="@+id/jimuto_change_button"
        app:layout_constraintTop_toBottomOf="@+id/image_button_touroku" />

    <TextView
        android:id="@+id/main_jimutou_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="322dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>